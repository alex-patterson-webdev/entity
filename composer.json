{
  "name": "alex-patterson-webdev/entity",
  "description": "Shared library of domain objects, traits and interfaces",
  "version": "1.0.0",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "Arp\\Entity\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\Entity\\": "test/phpunit"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
