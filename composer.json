{
  "name": "alex-patterson-webdev/entity",
  "description": "Shared library of domain objects, traits and interfaces",
  "version": "1.0.0",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd": "@stable",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Arp\\Entity\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\Entity\\": "test/phpunit/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://dev.satis.local"
    }
  ],
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "secure-http": false,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
